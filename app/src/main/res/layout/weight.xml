<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.weight.Weight">

    <TextView
        android:text="性别:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/textSex"
        android:layout_below="@+id/textTittle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp"
        tools:text="性别：" />

    <TextView
        android:text="计算你的标准体重"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/textTittle"
        tools:text="计算你的标准体重"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/textSex"
        android:layout_toRightOf="@+id/textSex"
        android:layout_toEndOf="@+id/textSex"
        android:id="@+id/rgSex"
        android:checkedButton="@+id/rbMale">

        <RadioButton
            android:text="男"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbMale"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/textSex"
            android:layout_alignBottom="@+id/textSex"
            android:layout_toRightOf="@+id/textSex"
            android:layout_toEndOf="@+id/textSex"
            android:checked="false" />

        <RadioButton
            android:text="女"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbFemale"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/rbMale"
            android:layout_alignBottom="@+id/rbMale"
            android:layout_toRightOf="@+id/rbMale"
            android:layout_toEndOf="@+id/rbMale"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:checked="false" />

    </RadioGroup>

    <TextView
        android:text="cm"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCm"
        tools:text="cm"
        android:layout_alignBottom="@+id/textHeight"
        android:layout_toRightOf="@+id/rgSex"
        android:layout_toEndOf="@+id/rgSex" />

    <Button
        android:text="计    算"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnWork"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textHeight"
        android:layout_toEndOf="@+id/textHeight"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <EditText
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textSize="10dp"
        android:ems="10"
        android:id="@+id/etWeight"
        android:layout_alignTop="@+id/textHeight"
        android:layout_toRightOf="@+id/textHeight"
        android:layout_toEndOf="@+id/textHeight" />

    <TextView
        android:text="身高："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/textHeight"
        tools:text="身高："
        android:layout_below="@+id/textSex"
        android:layout_alignLeft="@+id/textTittle"
        android:layout_alignStart="@+id/textTittle" />

</RelativeLayout>
